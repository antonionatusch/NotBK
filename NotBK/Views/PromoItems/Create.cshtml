@model NotBK.Models.PromoItem

@{
    ViewData["Title"] = "Create";
}



<h4>Agregar un item a una promoción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodItem" class="control-label">Item</label>
                <select asp-for="CodItem" class ="form-control" asp-items="ViewBag.CodItem"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodPromo" class="control-label">Promoción</label>
                <select asp-for="CodPromo" class ="form-control" asp-items="ViewBag.CodPromo"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha de inicio</label>
                <input type="date" asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha de fin</label>
                <input type="date" asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar registro" class="btn btn-outline-success" />
            </div>
            

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a los items con promoción</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
