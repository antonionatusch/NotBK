@model NotBK.Models.PromoItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PromoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="PromoItems" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodItem" />
            <input type="hidden" asp-for="CodPromo" />
            <input type="hidden" name="id" value="@ViewBag.Id" />
            <input type="hidden" name="id2" value="@ViewBag.Id2" />
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
