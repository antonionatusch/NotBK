@model NotBK.Models.PromoItem

@{
    ViewData["Title"] = "Delete";
}



<h3>¿Estás seguro que quieres eliminar al item de la promoción?</h3>
<div>
    <h4>Item en promo:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodItem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodPromo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPromo)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CodItem" />
        <input type="hidden" asp-for="CodPromo" />
        <input type="hidden" name="id" value="@ViewBag.Id" />
        <input type="hidden" name="id2" value="@ViewBag.Id2" />
        <input type="submit" value="Confirmar eliminación" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Volver a la lista de items en promoción</a>
    </form>
</div>
