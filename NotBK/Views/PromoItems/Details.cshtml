@model NotBK.Models.PromoItem

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Item en promoción</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            Fecha de finalización
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            Item
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodItemNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Promoción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPromoNavigation.Nombre)
        </dd>

        <dt class = "col-sm-2">
            Código del item en descuento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodItemNavigation.CodItem)
        </dd>
        <dt class = "col-sm-2">
            Código de la promoción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodPromoNavigation.CodPromo)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Modificar duración del descuento", "Edit", new { id = Model.CodItem, id2 = Model.CodPromo }) |
    <a asp-action="Index">Volver a la lista de items en promoción</a>
</div>
