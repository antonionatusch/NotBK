@model NotBK.Models.Pedido

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Revisar detalles del pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodClienteNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Código del cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodClienteNavigation.CodCliente)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodPedido">Modificar información del pedido</a> |
    <a asp-action="Index">Volver a la lista de pedidos</a>
</div>
