@model IEnumerable<NotBK.Models.Pedido>

@{
    ViewData["Title"] = "Clientes";
}

<h1 style="font-size: 22px" >Pedidos de NotBK</h1>

<p>
    <a asp-action="Create">Agregar nuevo pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Código del pedido
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodClienteNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CodPedido">Modificar</a> |
                <a asp-action="Details" class="btn btn-info" style="color: white"  asp-route-id="@item.CodPedido">Revisar detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodPedido">Eliminar registro</a>
            </td>
        </tr>
}
    </tbody>
</table>
