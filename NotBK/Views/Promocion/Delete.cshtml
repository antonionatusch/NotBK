@model NotBK.Models.Promocion

@{
    ViewData["Title"] = "Delete";
}



<h3>¿Estás seguro que quieres eliminar esta promoción?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descuento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descuento)
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPromo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodPromo" />
        <input type="submit" value="Confirmar eliminación" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Volver a la lista de promociones</a>
    </form>
</div>
