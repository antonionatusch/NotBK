@model IEnumerable<NotBK.Models.Promocion>

@{
    ViewData["Title"] = "Index";
}

<h1>Promociones</h1>

<p>
    <a asp-action="Create">Agregar nueva promoción</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodPromo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodPromo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodPromo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
