@model NotBK.Models.DetallePedido

@{
    ViewData["Title"] = "Details";
}

<h1>Información del pedido</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            Dirección de entrega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Item
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodItemNavigation.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Código del pedido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodPedidoNavigation.CodPedido)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Modificar duración del descuento", "Edit", new { id = Model.CodItem, id2 = Model.CodPedido }) |
    <a asp-action="Index">Volver a la lista de detalles de pedidos</a>
</div>
