@model NotBK.Models.DetallePedido

@{
    ViewData["Title"] = "Create";
}

<h4>Agregar un item a una promoción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodItem" class="control-label">Item</label>
                <select asp-for="CodItem" class="form-control" asp-items="ViewBag.CodItem"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodPedido" class="control-label">Pedido</label>
                <select asp-for="CodPedido" class="form-control" asp-items="ViewBag.CodPedido"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label">Cantidad</label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Dirección</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar registro" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al índice</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
