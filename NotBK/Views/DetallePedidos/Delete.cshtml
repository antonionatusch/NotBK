@model NotBK.Models.DetallePedido

@{
    ViewData["Title"] = "Delete";
}



<h3>¿Está seguro de que desea eliminar este detalle de pedido?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2">
            Item
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodItemNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Código del pedido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPedidoNavigation.CodPedido)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodItem" />
        <input type="hidden" asp-for="CodPedido" />
        <input type="hidden" name="id" value="@ViewBag.Id" />
        <input type="hidden" name="id2" value="@ViewBag.Id2" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
