@model IEnumerable<NotBK.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-size: 22px" >  Clientes de NotBK  </h1>

<p>
    <a asp-action="Create">Registrar nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                NIT Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@item.CodCliente">Modificar datos de un cliente</a> |
                <a asp-action="Details" class="btn btn-info" style="color: white" asp-route-id="@item.CodCliente">Más información</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodCliente">Eliminar un cliente</a>
            </td>
        </tr>
}
    </tbody>
</table>
