@model IEnumerable<NotBK.Models.Item>

@{
    ViewData["Title"] = "Items de NotBK";
}

<h1>Items de NotBK</h1>

<p>
    <a asp-action="Create">Registrar nuevo item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                Tamaño
            </th>
            <th>
                Categoría
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                Bs.- @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodCategoriaNavigation.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CodItem">Modificar</a> |
                <a asp-action="Details" class="btn btn-info" style="color: white" asp-route-id="@item.CodItem">Revisar detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodItem">Eliminar registro</a>
            </td>
        </tr>
}
    </tbody>
</table>
