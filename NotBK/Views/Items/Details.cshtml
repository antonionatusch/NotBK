@model NotBK.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Items de NotBK</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            Bs.- @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Tamaño
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size) 
        </dd>
        <dt class = "col-sm-2">
            Código de la categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodCategoriaNavigation.Descripcion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodItem">Modificar este item</a> |
    <a asp-action="Index">Volver a la lista de ítems</a>
</div>
