@model NotBK.Models.Categorium

@{
    ViewData["Title"] = "Delete";
}

<h1 style="font-size: 22px" >Eliminar una categoría</h1>

<h3>¿Estás seguro que quieres eliminar esta categoría?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodCategoria" />
        <input type="submit" value="Confirmar" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Volver a la lista de categorías</a>
    </form>
</div>
