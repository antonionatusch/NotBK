@model NotBK.Models.Categorium

@{
    ViewData["Title"] = "Details";
}

<h1 style="font-size: 22px" >Detalles</h1>

<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodCategoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodCategoria">Modificar</a> |
    <a asp-action="Index">Volver a la lista de categorías</a>
</div>
