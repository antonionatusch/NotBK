@model IEnumerable<NotBK.Models.Categorium>

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-size: 22px" >Categorías</h1>

<p>
    <a asp-action="Create">Agregar nueva categoría</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CodCategoria">Modificar categoría</a> |
                <a asp-action="Details" class="btn btn-info" style="color: white" asp-route-id="@item.CodCategoria">Más información</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodCategoria">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
